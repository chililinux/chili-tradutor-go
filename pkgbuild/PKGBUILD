#!/usr/bin/bash
# Maintainer  : Vilmar Catafesta <vcatafesta@gmail.com>

pkgname=chili-tradutor-go
pkgdesc="Wrapper universal de tradução automática com cache inteligente"
pkgver=$(date +%Y%m%d)
pkgrel=$(date +%H%M)
arch=('any')
license=('MIT')
url="https://github.com/chililinux/$pkgname"
provides=("$pkgname")
source=("git+${url}.git")
md5sums=('SKIP')
depends=("bash>=0")

package() {
	local dirs=("usr" "etc" "opt")

	cd ${srcdir}/${pkgname}
	echo $PWD
	echo $pkgdir
 	for dir in "${dirs[@]}"; do
		if [ -d "$${dir}" ]; then
			cp -a "${dir}" "$pkgdir/"
		fi
	done
}
